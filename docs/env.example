# ============================================
# SMTP Account Configuration
# ============================================

# Default SMTP Account (required)
MAIL_SMTP_ACCOUNTS__DEFAULT__HOST=smtp.gmail.com
MAIL_SMTP_ACCOUNTS__DEFAULT__PORT=587
MAIL_SMTP_ACCOUNTS__DEFAULT__USERNAME=your-email@gmail.com
MAIL_SMTP_ACCOUNTS__DEFAULT__PASSWORD=your-app-password
MAIL_SMTP_ACCOUNTS__DEFAULT__SECURITY=starttls
MAIL_SMTP_ACCOUNTS__DEFAULT__FROM_EMAIL=your-email@gmail.com
MAIL_SMTP_ACCOUNTS__DEFAULT__FROM_NAME=Your Name
MAIL_SMTP_ACCOUNTS__DEFAULT__REPLY_TO=your-email@gmail.com

# Support Account (optional)
MAIL_SMTP_ACCOUNTS__SUPPORT__HOST=smtp.gmail.com
MAIL_SMTP_ACCOUNTS__SUPPORT__PORT=587
MAIL_SMTP_ACCOUNTS__SUPPORT__USERNAME=support@yourcompany.com
MAIL_SMTP_ACCOUNTS__SUPPORT__PASSWORD=support-password
MAIL_SMTP_ACCOUNTS__SUPPORT__SECURITY=starttls
MAIL_SMTP_ACCOUNTS__SUPPORT__FROM_EMAIL=support@yourcompany.com
MAIL_SMTP_ACCOUNTS__SUPPORT__FROM_NAME=Support Team

# Transactions Account (optional)
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__HOST=smtp.gmail.com
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__PORT=587
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__USERNAME=transactions@yourcompany.com
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__PASSWORD=transactions-password
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__SECURITY=starttls
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__FROM_EMAIL=transactions@yourcompany.com
MAIL_SMTP_ACCOUNTS__TRANSACTIONS__FROM_NAME=Transactions Team

# Default account to use when none specified
MAIL_DEFAULT_ACCOUNT=default

# ============================================
# Redis Configuration
# ============================================

MAIL_REDIS__HOST=localhost
MAIL_REDIS__PORT=6379
MAIL_REDIS__DB=0
MAIL_REDIS__PASSWORD=
MAIL_REDIS__QUEUE_NAME=mailing2fast:queue
MAIL_REDIS__RETRY_QUEUE_NAME=mailing2fast:retry
MAIL_REDIS__DEAD_LETTER_QUEUE_NAME=mailing2fast:dlq
MAIL_REDIS__MAX_CONNECTIONS=10

# ============================================
# Queue Settings
# ============================================

MAIL_QUEUE__ENABLED=true
MAIL_QUEUE__MAX_RETRIES=3
MAIL_QUEUE__RETRY_DELAY=300
MAIL_QUEUE__WORKER_POLL_INTERVAL=1
MAIL_QUEUE__BATCH_SIZE=10

# ============================================
# Rate Limiting
# ============================================

MAIL_RATE_LIMIT__ENABLED=true
MAIL_RATE_LIMIT__MAX_EMAILS_PER_HOUR=100
MAIL_RATE_LIMIT__MAX_EMAILS_PER_MINUTE=10

# ============================================
# Template Settings
# ============================================

MAIL_TEMPLATES__ENABLED=true
MAIL_TEMPLATES__TEMPLATE_DIR=templates/emails
MAIL_TEMPLATES__AUTO_ESCAPE=true

# ============================================
# General Settings
# ============================================

MAIL_ASYNC_SEND_TIMEOUT=30
